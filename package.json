{
  "name": "codigo-theme",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "del": "rimraf ./js/**/* && rimraf ./dist/**/*",
    "copyjs": "cpx ./js/**/* ./dist/js",
    "copyphp": "cpx ./**/*.php ./dist",
    "copyassets": "cpx ./assets/**/* ./dist/assets",
    "copyscreenshot": "cpx ./screenshot.png ./dist",
    "copystyle": "cpx ./style.css ./dist",
    "cssdeb": "tailwindcss-cli build ./tailwind.css -o ./styles.css",
    "cssprod": "cross-env NODE_ENV=production tailwindcss-cli build ./tailwind.css -o ./dist/styles.css",
    "build": "npm run del && tsc && npm run copyscreenshot && npm run copystyle && npm run cssdeb && npm run cssprod && npm run copyjs && npm run copyphp && npm run copyassets"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stenet/codigo-theme.git"
  },
  "author": "Stefan Heim",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stenet/codigo-theme/issues"
  },
  "homepage": "https://github.com/stenet/codigo-theme#readme",
  "dependencies": {
    "autoprefixer": "^10.1.0",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "postcss": "^8.2.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.0.2",
    "tailwindcss-cli": "^0.1.2"
  }
}
